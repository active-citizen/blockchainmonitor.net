<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Мониторинг блокчейн базы данных</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="blockchain-body">
    <div class="navbar navbar-fixed-top blockchain-header-top">
        <div class="container">
            <div class="navbar-header blockchain-header">
                <button type="button" class="navbar-toggle blockchain-header-button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Блокчейн монитор", "Index", "Home", new { area = "" }, new { @class = "navbar-brand blockchain-logo" })
            </div>
            <div class="navbar-collapse collapse blockchain-main-menu">
                <ul class="nav navbar-nav blockchain-main-menu-navbar">
                    <li>@Html.ActionLink("Главная", "Index", "Home", new { @class = "blockchain-menu-item"})</li>
                    <li>@Html.ActionLink("Графики", "Index", "Graphics", new { @class = "blockchain-menu-item" })</li>
                    <li>@Html.ActionLink("Статистика", "Index", "Statistics", new { @class = "blockchain-menu-item" })</li>
                    <li>@Html.ActionLink("Участники", "Index", "Participants", new { @class = "blockchain-menu-item" })</li>
                    <li>@Html.ActionLink("Смартконтракты", "Index", "SmartContracts", new { @class = "blockchain-menu-item" })</li>
                </ul>
                @Html.Partial("_Search")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="pull-left">&copy; @DateTime.Now.Year - ДИТ г. Москвы</div>
            <div class="center-block">
                <span>@Html.ActionLink("О проекте", "About", "Home")</span>
                <span>@Html.ActionLink("Стать участником", "BecomeMember", "Home")</span>
                <span>@Html.ActionLink("API", "API", "Home")</span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/signalr")
    @Scripts.Render("~/bundles/carousel")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
